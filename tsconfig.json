{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@constants": ["./constants/index.ts"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@lib/*": ["./lib/*"],
      "@contexts/*": ["./contexts/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "index.d.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}